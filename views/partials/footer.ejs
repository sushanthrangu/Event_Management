  <div id="support-chat-widget" class="support-chat-widget hidden">
    <div class="support-chat-header">
      <span>Event Assistant</span>
      <button id="support-close-btn" type="button">Ã—</button>
    </div>
    <div id="support-chat-log" class="support-chat-log"></div>
    <div class="support-chat-input-row">
      <input id="support-input" type="text" placeholder="Ask about events, login, etc..." />
      <button id="support-send-btn" type="button">Send</button>
    </div>
  </div>
  
  <button id="support-toggle-btn" class="support-toggle-btn">
    ðŸ’¬
  </button>
  
  <script>
    const toggleBtn = document.getElementById("support-toggle-btn");
    const chatWidget = document.getElementById("support-chat-widget");
    const closeBtn = document.getElementById("support-close-btn");
    const chatLog = document.getElementById("support-chat-log");
    const inputEl = document.getElementById("support-input");
    const sendBtn = document.getElementById("support-send-btn");
  
    function appendMessage(type, text) {
      const div = document.createElement("div");
      if (type === "user") {
        div.style.fontWeight = "600";
        div.textContent = "You: " + text;
      } else {
        div.style.marginLeft = "8px";
        div.textContent = "Bot: " + text;
      }
      chatLog.appendChild(div);
      chatLog.scrollTop = chatLog.scrollHeight;
    }
  
    async function sendQuestion() {
      const question = inputEl.value.trim();
      if (!question) return;
  
      appendMessage("user", question);
      inputEl.value = "";
      appendMessage("bot", "Thinking...");
  
      try {
        const res = await fetch("/api/support", {
          method: "POST",
          headers: { "Content-Type": "application/x-www-form-urlencoded" },
          body: new URLSearchParams({ question })
        });
  
        const data = await res.json();
        chatLog.removeChild(chatLog.lastChild); // remove "Thinking..."
  
        if (res.ok) {
          appendMessage("bot", data.answer || "(no answer)");
        } else {
          appendMessage("bot", "Error: " + (data.error || "Something went wrong"));
        }
      } catch (err) {
        chatLog.removeChild(chatLog.lastChild);
        appendMessage("bot", "Error: " + err.message);
      }
    }
  
    toggleBtn.addEventListener("click", () => {
      chatWidget.classList.toggle("hidden");
    });
  
    closeBtn.addEventListener("click", () => {
      chatWidget.classList.add("hidden");
    });
  
    sendBtn.addEventListener("click", sendQuestion);
  
    inputEl.addEventListener("keydown", (e) => {
      if (e.key === "Enter") {
        e.preventDefault();
        sendQuestion();
      }
    });
  </script>
  
