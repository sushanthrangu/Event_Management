<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
    <title>Document</title>
</head>
<body>
    
    <!-- website logo and user specific navigation -->
    <div id="nav-bar">
        <nav class="navbar navbar-expand-lg ">
            <div class="container-fluid">
            <a class="navbar-brand" href="/"><img src="/images/LOGO.jpg" alt="MeetupChronicle" style="height: 120px; width: 300px;"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <%if(!user){%>
                        <li class="nav-item" id="signUp-btn">
                            <a class="nav-link" href="/users/new" >Sign Up</a>
                        </li>
                        <li class="nav-item " id="login-btn">
                            <a class="nav-link" href="/users/login">Login</a>
                        </li>
                    <%} else{%>
                        <li class="nav-item user-nav-btn" >
                            <a class="nav-link " id="new-connection-btn" href="/connections/new">New Event</a>
                        </li>
                        
                        <li class="nav-item " id="profile-btn">
                            <a class="nav-link" href="/users/profile"><%= userName%>'s Profile</a>
                        </li>
                        
                        <li class="nav-item " id="logout-btn">
                            <a class="nav-link" href="/users/logout">Logout</a>
                        </li>
                    <%}%>
                </ul>
            </div>
            </div>
        </nav>
    </div>


    <!-- General site navigation(Used rows and colums in bootstrap) -->
    <div class="row custom-row ms-auto align-items-center">
        <div class="col-md-1 ">
            <a class="option" href="/">Home</a>
        </div>
        
        <div class="col-md-1">
            <a class="option" href="/connections">Events</a>
        </div>
    </div>

    <% if(errorMessages.length > 0) {%>
        <% errorMessages.forEach(message=>{%>
            <div class='error'>
                <%=message%>
            </div>
        <%});%>
    <%}%>
    
    <% if(successMessages.length > 0) {%>

        <% successMessages.forEach(message=>{%>
            <div class='success'>
                <%=message%>
            </div>
        <%});%>
    <%}%>